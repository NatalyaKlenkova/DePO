@font-face 
    font-family: 'TT Firs Neue';
    src: local('TT Firs Neue Medium'), local('TTFirsNeue-Medium'),
        url('../fonts/TTFirsNeue-Medium.woff2') format('woff2'),
        url('../fonts/TTFirsNeue-Medium.woff') format('woff');
    font-weight: 500;
    font-style: normal;
    font-display: swap

@font-face
    font-family: 'Inter';
    src: local('Inter Regular'), local('Inter-Regular'),
        url('../fonts/Inter-Regular.woff2') format('woff2'),
        url('../fonts/Inter-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap

@font-face
    font-family: 'Inter';
    src: local('Inter Bold'), local('Inter-Bold'),
        url('../fonts/Inter-Bold.woff2') format('woff2'),
        url('../fonts/Inter-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap
    
@font-face
    font-family: 'Inter';
    src: local('Inter Extra Bold'), local('Inter-ExtraBold'),
        url('../fonts/Inter-ExtraBold.woff2') format('woff2'),
        url('../fonts/Inter-ExtraBold.woff') format('woff');
    font-weight: 800;
    font-style: normal;
    font-display: swap


@font-face
    font-family: 'Inter';
    src: local('Inter Medium'), local('Inter-Medium'),
        url('../fonts/Inter-Medium.woff2') format('woff2'),
        url('../fonts/Inter-Medium.woff') format('woff');
    font-weight: 500;
    font-style: normal;
    font-display: swap

$white = #fff
$black = #000
$gray = #6f767e
$light-gray = #d9d9d9
$darker-blue = #3474ca
$blue = #3e8bf3
$light-blue = #c0e1ee
$green = #6fd6bd
$light-green = #d0e5c2
$light-violet = #dfd3f7
$blue-bg = #f5f9fe
$blue-bg-dark = #e3eefd

html
	box-sizing border-box
	overflow-x hidden

*,
*::after,
*::before
	box-sizing inherit

body
    min-width 320px
    background-color $white
    font-family 'TT Firs Neue', sans-serif
    font-weight 500
    color $black

// Global

.container
    width 100%
    padding 0 108px
    margin 0 auto

.title
    font-weight: 500;
    font-size: 48px;
    line-height: 56px;
    color $black
    margin 0

.descr
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    color $gray
    margin 0

.descr-sm
    font-weight: 500;
    font-size: 12px;
    line-height: 16px;
    color $gray
    margin 0

.list-reset 
    list-style none
    padding 0
    margin 0

.btn-reset
    background-color transparent
    padding 0
    border none

.btn
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    color $white
    background-color $blue
    padding 12px 16px
    border-radius 8px

a
    text-decoration none
    color inherit

img
    max-width 100%

.section-offset
    padding 120px 0

.section-divider
    border-bottom 1px solid $light-gray
    border-width: 85%

.visually-hidden 
    position absolute
    width 1px
    height 1px
    margin -1px
    border 0
    padding 0
    clip rect(0 0 0 0)
    overflow hidden

// Header
.header
    &__container
        display flex
        justify-content space-between
        align-items center
        padding 20px 24px
    &__left,
    &__right
        display flex
        align-items center
    &__logo
        padding-right 24px
        border-right 1px solid $light-gray
        margin-right 24px

.nav
    display flex
    align-items center
    &__list
        display flex
    &__item:not(:last-child)
        margin-right 40px
        
.lang
    display flex
    align-items center
    margin-right 24px
    &__icon
        width 20px
        height 20px
        margin-right 8px
    &__arrow
        width 24px
        height 24px

// Hero
.hero
    background-color $blue-bg
    &__container
        background-image url('../img/hero-bg.png')
        background-repeat no-repeat
        background-position right 108px top 61px
        background-size 600px 626px
        padding 24px 24px
    &__content
        padding-top 162px
        padding-left 108px
        margin-bottom 194px
    &__title
        max-width 44%
        font-weight: 500;
        font-size: 64px;
        line-height: 72px;
        margin 0
        margin-bottom 32px
    &__btn
        margin-bottom 32px
    &__descr
        display flex
        align-items center
    &-descr__icon
        background-size contain
        width 24px
        height 24px
        margin-right 8px
    &__bottom
        display flex
        justify-content space-between

.hero-scroll
    display flex
    align-items center
    &__icon 
        width 24px
        height 24px
        margin-right 16px
    &__icon use
        width 100%
        height 100%

.social
    display flex
    align-items center
    &__descr
        margin-right 24px
    &__list
        display flex
        align-items center
    &__item
        &:not(:last-child)
            margin-right 16px
    &__link
        display inline-block
    &__icon
        width 40px
        height 40px

// About
.about
    &__content
        display flex
        justify-content space-between
    &__title
        width 50%
        margin-right 174px
    &__descr
        width 47%
        font-weight: 500;
        font-size: 18px;
        line-height: 32px;
        color $gray
        margin 0

// Stages
.stages
    &__top
        display flex
        justify-content: space-between
        align-items flex-start
        margin-bottom 48px
    &__title
        width 35%
    &__list
        display flex
    &__item
        display flex
        flex-direction column
        align-items: flex-start
        &:not(:last-child)
            margin-right 24px

.stages-item
    &__image
        margin-bottom 24px
    &__number
        color $black
        background-color $light-blue
        padding 4px 16px
        border-radius 24px
        margin-bottom 24px
        &-1
            background-color $light-violet
        &-3
            background-color $light-green
    &__title
        font-weight: 500;
        font-size: 24px;
        line-height: 32px;
        color $black
        margin 0
        margin-bottom 24px